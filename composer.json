{
    "name": "phlib/litmus-reseller-sdk",
    "description": "SDK to allow you to use the legacy Litmus Reseller SOAP API",
    "license": "LGPL-3.0",
    "keywords": ["email testing", "email preview", "email subject preview", "spam testing"],
    "authors": [
        {
            "name": "Benjamin Laugueux",
            "homepage": "https://github.com/blaugueux"
        },
        {
            "name": "Phlib Team & Contributors",
            "homepage": "https://github.com/phlib/litmus-reseller-sdk/contributors"
        }
    ],
    "require": {
        "php": "^7.3",
        "ext-soap": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^8"
    },
    "autoload": {
        "psr-4": {
            "Phlib\\LitmusResellerSDK\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Phlib\\LitmusResellerSDK\\Test\\": "tests"
        }
    },
    "scripts": {
        "cs-check": "phpcs --standard=PSR12 src/ tests/",
        "cs-fix": "phpcbf --standard=PSR12 src/ tests/"
    }
}
